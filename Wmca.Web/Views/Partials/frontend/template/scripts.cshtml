@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage

@{
    var siteProps = Umbraco.ContentAtRoot().FirstOrDefault().Children().Where(x => x.ContentType.Alias == "siteProperties");
    var siteProperties = siteProps.First();
    var dsVersion = siteProperties.Value<string>("designSystemVersion");
}

<script src="https://cloudcdn.wmca.org.uk/wmcabeta/1.1.42/js/vendor.min.js"></script>
<script src="/assets/js/ds-website.min.js"></script>
@*<script src="https://www.wmca.org.uk/scripts/wmcads-templates.js"></script>*@

<!-- Ajax SVGs from Design System -->
  <script>
    const ajax = new XMLHttpRequest();
    ajax.open('GET', '/assets/icon/ds-icons.min.svg', true);
    ajax.send();
    ajax.onload = function () {
      const div = document.createElement('div');
      div.style.display = 'none';
      div.innerHTML = ajax.responseText;
      document.body.insertBefore(div, document.body.childNodes[0]);
    };
  </script>