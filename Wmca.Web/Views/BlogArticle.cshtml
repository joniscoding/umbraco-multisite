            }
        }*@

                @Model.Date

                @if (Model.Tags.Any())
                {
                    <ul class="ds-bare-list">
                        @foreach (var tag in Model.Tags)
                        {
                            <li>@tag</li>
                        }
                    </ul>
                }

                <div class="ds-msg-summary ds-msg-summary--warning ">
                    <div class="ds-msg-summary__header">
                        <svg class="ds-msg-summary__icon">
                            <use xlink:href="#ds-general-warning-circle" href="#ds-general-warning-circle"></use>
                        </svg>
                    </div>
                    <div class="ds-msg-summary__info">
                        This blog post is an opinion and may not reflect WMCA's views.
                    </div>
                </div>
                <div class="ds-inset-text" aria-label="Introduction">
                    @Model.Value("introduction")
                </div>

                @Html.GetBlockGridHtml(Model, "Grid")

                <hr aria-hidden="true">
                Tags:
                @if (Model.Tags.Any())
                {

                    <ul class="ds-bare-list">
                        @foreach (var tag in Model.Tags)
                        {
                            <li>@tag</li>
                        }
                    </ul>
                }


